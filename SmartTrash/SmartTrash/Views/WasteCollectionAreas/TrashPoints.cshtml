@model SmartTrash.Models.WasteCollectionArea
@{
    var formHeader = Model == null || Model.Id==0 ? "Добавление точки" : "Редактирование";
    var formButton = Model == null || Model.Id==0 ? "Добавить" : "Сохранить";
    ViewData["Title"] = formHeader;
}
<h1>@formHeader</h1>
<form class="form" asp-action="TrashPoints" method="post">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Latitude"></label>
        <input asp-for="Latitude" pattern="[-]?([0-9]*[,])?[0-9]+$" title="Вы ввели буквы или точку, для ввода координаты используйте цифры и запятую"/>
        <span asp-validation-for="Latitude"></span>
    </div>
    <div class="form-group">
        <label asp-for="Longitude"></label>
        <input asp-for="Longitude" pattern="[-]?([0-9]*[,])?[0-9]+$" title="Вы ввели буквы или точку, для ввода координаты используйте цифры и запятую"/>
        <span asp-validation-for="Longitude"></span>
    </div>
    <div class="form-group">
        <label asp-for="Volume"></label>
        <input asp-for="Volume" pattern="([0-9]*[,])?[0-9]+$" title="Вы ввели буквы или точку или использовали знак '-', для ввода объёма используйте цифры и запятую"/>
        <span asp-validation-for="Volume"></span>
    </div>
    <input class="btn btn-success" type="submit" value=@formButton>
</form>