@model SmartTrash.Models.AreaEdit
@{
    var formHeader = Model == null || Model.Id==0 ? "Добавление точки" : "Редактирование";
    var formButton = Model == null || Model.Id==0 ? "Добавить" : "Сохранить";
    ViewData["Title"] = formHeader;
}
<h1>@formHeader</h1>
<form class="form" asp-action="TrashPoints" method="post">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Latitude">Широта</label>
        <input asp-for="Latitude" pattern="[-]?([0-9]*[,])?[0-9]+$"/> />
        <span asp-validation-for="Latitude"></span>
    </div>
    <div class="form-group">
        <label asp-for="Longitude">Долгота</label>
        <input asp-for="Longitude" pattern="[-]?([0-9]*[,])?[0-9]+$"/>
        <span asp-validation-for="Longitude"></span>
    </div>
    <div class="form-group">
        <label asp-for="Volume">Объём</label>
        <input asp-for="Volume" pattern="([0-9]*[,])?[0-9]+$"/>/>
        <span asp-validation-for="Volume"></span>
    </div>
    <input class="btn btn-success" type="submit" value=@formButton>
</form>