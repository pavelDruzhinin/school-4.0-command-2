@model IEnumerable<SmartTrash.Models.WasteCollectionArea>
@{
    ViewData["Title"] = "CRUD";
}
<h1>CRUD</h1>
<div>
    <a href="CRUD/add/" class="btn btn-default">Добавить точку</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Название</th>
            <th>Координаты</th>
            <th>Объем, л.</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Latitude / @item.Longitude</td>
            <td>@item.Volume</td>
            <td><a href="CRUD/edit/@(item.Id)" class="btn btn-warning">Редактировать</a></td>
            <td><a href="CRUD/del/@(item.Id)" class="btn btn-warning">Удалить</a></td>
        </tr>
        }
    </tbody>
</table>