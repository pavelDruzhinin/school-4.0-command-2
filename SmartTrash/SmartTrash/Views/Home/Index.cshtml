@{
    ViewData["Title"] = "Home Page";
}


<h2>Мусорные баки</h2>
<div class="table-responsive">
    <table id ="trashpoints" class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th>Название</th>
            <th>Координаты</th>
            <th>Объем, л.</th>
            <th>Наполненность, %</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $('#trashpoints').DataTable({
                ajax: {
                    url: "/areas",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: 'name'
                    },
                    {
                        data: {
                            latitude:'latitude',
                            longitude:'longitude'
                        },
                        render: function (data) { return data.latitude + '; ' + data.longitude }
                    },
                    {
                        data: 'volume'
                    },
                    {
                        data: 'percentOfFill',
                        render: function (data) {return Math.round(data)}
                    }
                ]
            });
        });
    </script>
}
