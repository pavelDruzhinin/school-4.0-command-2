@model SmartTrash.ViewModels.IdentityViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

@if (!User.Identity.IsAuthenticated)
{
    <h2 class="pt-3 pb-2 mb-3 border-bottom">Вход в систему</h2>


    <form method="post" class="form-signin" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">


        <label class="sr-only" for="inputLogin">Имя пользователя</label>
        <input type="text" id="inputLogin" class="form-control" placeholder="Имя пользователя" asp-for="UserName">


        <label for="inputPassword" class="sr-only">Пароль</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Пароль" asp-for="Password">

        <div class="checkbox mb-3">
            <label asp-for="RememberMe">
                <input type="checkbox" asp-for="RememberMe"> Запомнить меня
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
        <p class="mt-5 mb-3 text-muted text-center">© 2018-2019</p>
    </form>
}
else
{
    <h2 class="pt-3 pb-2 mb-3">You have been already signed in!</h2>
}
